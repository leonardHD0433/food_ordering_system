<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="software_design.controller.AdminController">
    <children>
        <HBox alignment="TOP_LEFT" style="-fx-background-insets: 0;">
            <Button fx:id="switchCustomerButton" 
                    text="Switch to Customer" 
                    onAction="#handleSwitchCustomer"
                    style="-fx-background-color: #E0E0E0;
                           -fx-border-color: #808080;
                           -fx-border-width: 1px;
                           -fx-border-radius: 5px;
                           -fx-background-radius: 5px;
                           -fx-font-size: 14px;
                           -fx-padding: 5 10 5 10;">
                <HBox.margin>
                    <Insets left="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        
        <Label text="Admin Portal" 
               style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

        <Button fx:id="modifyMenuButton" 
                text="Modify Menu" 
                style="-fx-min-width: 300; -fx-min-height: 70; -fx-font-size: 24px;"/>
                
        <Button fx:id="processOrderButton" 
                text="Process Order" 
                style="-fx-min-width: 300; -fx-min-height: 70; -fx-font-size: 24px;"/>
                
        <Button fx:id="generateReceiptButton" 
                text="Generate Receipt" 
                style="-fx-min-width: 300; -fx-min-height: 70; -fx-font-size: 24px;"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>