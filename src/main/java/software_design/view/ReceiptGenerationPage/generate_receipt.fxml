<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="software_design.controller.ReceiptGenerationController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Receipt Generation" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Table Number:"/>
        <TextField fx:id="tableNumberInput"/>
        <Button text="Generate" onAction="#handleGenerateReceipt"/>
    </HBox>
    <VBox fx:id="receiptContainer" spacing="10"/>
    <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #E0E0E0; -fx-border-color: #808080; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
</VBox>